<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="4dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_profile_receiver"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_image_no_dash"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:layout_constraintBottom_toBottomOf="@id/message_receiver"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/message_receiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:background="@drawable/received_message_container"
        android:padding="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/image_profile_receiver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap" />

    <TextView
        android:id="@+id/messageSentTimeReceiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="Hello"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/message_receiver"
        app:layout_constraintTop_toBottomOf="@+id/message_receiver" />
</androidx.constraintlayout.widget.ConstraintLayout>